// Prisma schema file

generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum UserRoleEnum {
  Admin
  Regular
}

model User {
  id             String          @id @default(uuid())
  email          String          @unique
  passwordHash   String
  name           String?
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  roles          UserRole[]
  tokens         Token[]
  passwordResets PasswordReset[]
  auditLogs      AuditLog[]
}

model PasswordReset {
  id        String   @id @default(uuid())
  email     String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
}

model Token {
  id           String   @id @default(uuid())
  accessToken  String   @unique @db.VarChar(500)
  refreshToken String   @unique @db.VarChar(500)
  expiresAt    DateTime
  createdAt    DateTime @default(now())
  user         User     @relation(fields: [userId], references: [id])
  userId       String
}

model UserRole {
  id     String       @id @default(uuid())
  role   UserRoleEnum
  user   User         @relation(fields: [userId], references: [id])
  userId String
}

model AuditLog {
  id        String   @id @default(uuid())
  action    String
  details   String?
  createdAt DateTime @default(now())
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
}
